/*************旁白*******************/
.pangBai{
  height: 100%;
  width: 100%;
  /*背景颜色burlywood*/
  background-color: bisque;  
  /*布局方式*/
  display: flex;   
  /*主轴方向row:横，column：竖*/
  flex-direction: row;  
  /*容器中view过多，被填满时的处理，nowrap：不换行；wrap：换行 */
  flex-wrap: wrap;
  /*view在主轴上的排列方式：flex-start;flex-end;*/
  justify-content: center;
  /*view在交叉轴上的排列方式：flex-end,flex-start,stretch,baseline*/
  align-items: center;
}

